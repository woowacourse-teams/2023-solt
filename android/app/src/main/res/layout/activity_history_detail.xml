<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.history.detail.HistoryDetailActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_history_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_history_detail_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/btn_post_viewer_back_description"
                android:src="@drawable/ic_back" />

            <ImageView
                android:id="@+id/btn_history_detail_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_default"
                android:src="@drawable/ic_share" />

            <ImageView
                android:id="@+id/btn_history_detail_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_default"
                android:contentDescription="@string/btn_delete_description"
                android:src="@drawable/ic_delete" />

        </com.google.android.material.appbar.MaterialToolbar>

        <ImageView
            android:id="@+id/iv_history_detail_image"
            android:layout_width="0dp"
            android:layout_height="360dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_history_detail" />

        <ImageView
            android:id="@+id/iv_history_detail_route"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/iv_history_detail_image"
            app:layout_constraintStart_toStartOf="@id/iv_history_detail_image" />

        <TextView
            android:id="@+id/tv_history_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/title_1B"
            app:layout_constraintEnd_toStartOf="@id/btn_history_detail_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_history_detail_image"
            tools:text="한여름의 경주 여행 겁나 더웠다.." />

        <ImageView
            android:id="@+id/btn_history_detail_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="@dimen/margin_default"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@id/tv_history_detail_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_history_detail_title"
            app:layout_constraintTop_toTopOf="@id/tv_history_detail_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_trip_history_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_history_detail_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
